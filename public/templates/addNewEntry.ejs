<form id="newEntryForm" action="">
    <section class="left">
        <section class="item">
            <label for="type">Type</label>
            <select id="type"
                    data-placeholder="Entry Type"
                    autofocus>
                <option value=""></option>
                <option value="journal">Journal Entry</option>
                <option value="transport">Transportation</option>
                <option value="meal">Meal</option>
                <section id="additionalOptionWrap"></section>
            </select>
        </section>
        <section class="item">
            <label for="entry">Entry</label>
            <input type="number" name="entry" id="entry" placeholder="type in number" min="1" step="1">
        </section>
        <section class=item>
            <label for="entryDate">Date</label>
            <input type="datetime-local" name="date" id="entryDate" placeholder="select a date">
        </section>
    </section>

    <section class="middle">
        <section class="item">
            <div class='input-append'>
                <label for="accountNo">Account no.</label>
                <input type="number" name="accountNo" id="accountNo" placeholder="type or select" min="1" step="1">
                <span class="add-on"><i class="icon-envelope"></i></span>
            </div>
        </section>
        <section class="item">
            <div class='input-append'>
                <label for="contraAccount">Contra Account</label>
                <input type="number" name="contraAccount" id="contraAccount" placeholder="type or select" min="1" step="1">
                <span class="add-on"><i class="icon-envelope"></i></span>
            </div>
        </section>
        <section class="item">
            <label for="accountName">Account name</label>
            <input type="text" name="accountName" id="accountName" readonly>
        </section>
        <section class="item">
            <label for="contraAccountName">Contra account name</label>
            <input type="text" name="accountName" id="contraAccountName" readonly>
        </section>
    </section>

    <section class="right">
        <section class="item">
            <select id="cardType"
                    data-placeholder="Card Type">
                <option value=""></option>
                <option value="debit">Debit</option>
                <option value="credit">Credit</option>
            </select>
            <section class="item">
                <label for="amount">Amont</label>
                <input type="number" name="amount" id="amount">
            </section>
            <section class="item">
                <label for="text">Text</label>
                <input type="text" name="text" id="text">
            </section>
            <section class="item">
                <label for="currency">Text</label>
                <select id="currency"
                         data-placeholder="Currency"
                         >
                <option value=""></option>
                <section id="currencyList"></section>
            </select>
            </section>
        </section>
    </section>
    <section id="submitWrap">
        <input type="button" value="Cancel">
        <input type="submit" value="Save">
    </section>
</form>